<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_model_form" model="ir.ui.view">
        <field name="name">ir.model form</field>
        <field name="model">ir.model</field>
        <field name="inherit_id" ref="base.view_model_form" />
        <field name="arch" type="xml">
            <field name="transient" position="after">
                <label for="use_custom_mail_server" />
                <div>
                    <div>
                        <field name="use_custom_mail_server" />
                        <field
              name="custom_mail_server_id"
              attrs="{'required': [('use_custom_mail_server','=',True)], 'invisible':[('use_custom_mail_server', '=', False)]}"
            />
                    </div>
                </div>
            </field>
        </field>
    </record>
</odoo>
