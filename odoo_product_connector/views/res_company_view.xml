
<odoo>
    <data>
        <record id="view_company_form_inherit_sync" model="ir.ui.view">
            <field name="name">res.company.inherit.sync</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[last()]" position="after">
                    <page name="sync_info" string="Database Configuration">
                        <group>
                            <group>
                                <field name="db_name"/>
                                <field name="host_name"/>
                                <field name="user_name"/>
                                <field name="password"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
